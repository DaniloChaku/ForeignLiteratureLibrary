@model BookEditionLoanDto

@{
    ViewBag.Title = "Видалити видачу книги";
}

<form asp-action="Delete" method="post">
    <input hidden asp-for="BookEditionLoanID"/>
    <input hidden asp-for="BookEditionID"/>
    <input hidden asp-for="LibraryCardNumber"/>
    <input hidden asp-for="LoanDate"/>
    <input hidden asp-for="DueDate"/>
    <input hidden asp-for="ReturnDate"/>

    <h2 class="text-center mb-3">Видалити</h2>

        <div class="row mb-3">
        <div class="col-md-6">
            <label asp-for="LibraryCardNumber" class="form-label">Читач</label>
            <select asp-for="LibraryCardNumber" asp-items="ViewBag.Readers" class="form-select" disabled></select>
            <span class="text-danger" asp-validation-for="LibraryCardNumber"></span>
        </div>
        <div class="col-md-6">
            <label asp-for="BookEditionID" class="form-label">Книга</label>
            <select asp-for="BookEditionID" asp-items="ViewBag.BookEditions" class="form-select" disabled></select>
            <span class="text-danger" asp-validation-for="BookEditionID"></span>
        </div>
    </div>


    <div class="row mb-3">
        <div class="col-md-6">
            <label asp-for="LoanDate" class="form-label">Дата видачі</label>
            <input asp-for="LoanDate" class="form-control" disabled/>
            <span class="text-danger" asp-validation-for="LoanDate"></span>
        </div>
        <div class="col-md-6">
            <label asp-for="DueDate" class="form-label">Запланована дата повернення</label>
            <input asp-for="DueDate" class="form-control" disabled />
            <span class="text-danger" asp-validation-for="DueDate"></span>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-md-6">
            <label asp-for="ReturnDate" class="form-label">Фактична дата повернення</label>
            <input asp-for="ReturnDate" class="form-control" disabled />
            <span class="text-danger" asp-validation-for="ReturnDate"></span>
        </div>
    </div>

    <div class="row">
        <div class="col-6 col-lg-2 col-md-3 offset-lg-4 offset-md-3">
            <button type="submit" class="btn btn-danger form-control">Видалити</button>
        </div>
        <div class="col-6 col-lg-2 col-md-3">
            <a class="btn btn-secondary form-control" asp-action="Index">Повернутися</a>
        </div>
    </div>

    <ul class="text-danger">
        @if (ViewBag.Errors != null)
        {
            @foreach (var error in ViewBag.Errors)
            {
                <li>@error</li>
            }
        }
    </ul>
</form>

@model TranslatorDto

@{
    ViewBag.Title = "Редагувати перекладача";
}

<form asp-action="Edit" method="post">
    <input hidden asp-for="TranslatorID" />
    <h2 class="text-center mb-3">Редагувати</h2>
    <div class="row mb-3">
        <div class="col-md-6 offset-md-3">
            <label asp-for="FullName" class="form-label">ПІБ</label>
            <input asp-for="FullName" class="form-control" />
            <span class="text-danger" asp-validation-for="FullName"></span>
        </div>
    </div>

    <div class="row">
        <div class="col-6 col-lg-2 col-md-3 offset-lg-4 offset-md-3">
            <button type="submit" class="btn btn-primary form-control">Редагувати</button>
        </div>
        <div class="col-6 col-lg-2 col-md-3">
            <a class="btn btn-secondary form-control" asp-action="Index">Повернутися</a>
        </div>
    </div>
    
    <ul>
        @if (ViewBag.Errors != null)
        {
            @foreach (var error in ViewBag.Errors)
            {
                <li>@error</li>
            }
        }
    </ul>
</form>

<div class="d-flex flex-column align-content-center gap-3">
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">ISBN</th>
                <th scope="col">Назва</th>
                <th scope="col">Доступно копій</th>
                <th scope="col">Місце зберігання</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var bookEdition in Model.BookEditions)
            {
                <tr>
                    <td>@bookEdition.ISBN</td>
                    <td>@bookEdition.Title</td>
                    <td>@bookEdition.AvailableCopies</td>
                    <td>@bookEdition.ShelfLocation</td>
                </tr>
            }
        </tbody>
    </table>
</div>


@section Scripts{
    @await Html.PartialAsync("_ValidationScriptsPartial");
}
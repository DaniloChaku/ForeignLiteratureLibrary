@model PaginatedResult<PublisherDto>

@{
    ViewBag.Title = "Видавництва";
}

<a class="btn btn-primary mt-2 mb-4" asp-action="Add">Додати</a>

<div class="d-flex flex-column align-content-center gap-3">
    <h2 class="text-center">Видавництва</h2>
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">Видавництво</th>
                <th scope="col">Країна</th>
                <th scope="col">Дії</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var publisher in Model.Items)
            {
                <tr>
                    <td>@publisher.Name</td>
                    <td>@publisher.Country?.Name</td>
                    <td>
                        <a asp-action="Delete" asp-route-id="@publisher.PublisherID">Видалити</a>
                        <a asp-action="Edit" asp-route-id="@publisher.PublisherID">Редагувати</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    @await Html.PartialAsync("_PaginationPartial", (Model.Page, Model.TotalPages))
</div>
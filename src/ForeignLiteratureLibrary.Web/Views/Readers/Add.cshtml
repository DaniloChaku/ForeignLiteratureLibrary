@model ReaderDto

@{
    ViewBag.Title = "Додати читача";
}

<form asp-action="Add" method="post">
    <h2 class="text-center mb-3">Додати</h2>
    <div class="row mb-3">
        <div class="col-md-6 mb-2">
            <label asp-for="LibraryCardNumber" class="form-label">Номер картки читача</label>
            <input asp-for="LibraryCardNumber" class="form-control" />
            <span class="text-danger" asp-validation-for="LibraryCardNumber"></span>
        </div>
        <div class="col-md-6">
            <label asp-for="FullName" class="form-label">ПІБ</label>
            <input asp-for="FullName" class="form-control" />
            <span class="text-danger" asp-validation-for="FullName"></span>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-md-6 mb-2">
            <label asp-for="Email" class="form-label">Email</label>
            <input asp-for="Email" class="form-control" />
            <span class="text-danger" asp-validation-for="Email"></span>
        </div>
        <div class="col-md-6">
            <label asp-for="Phone" class="form-label">Номер телефону</label>
            <input asp-for="Phone" class="form-control" />
            <span class="text-danger" asp-validation-for="Phone"></span>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-6 col-lg-2 col-md-3 offset-lg-4 offset-md-3">
            <button type="submit" class="btn btn-primary form-control">Додати</button>
        </div>
        <div class="col-6 col-lg-2 col-md-3">
            <a class="btn btn-secondary form-control" asp-action="Index">Повернутися</a>
        </div>
    </div>

    <ul>
        @if (ViewBag.Errors != null)
        {
            @foreach (var error in ViewBag.Errors)
            {
                <li>@error</li>
            }
        }
    </ul>
</form>

@section Scripts{
    @await Html.PartialAsync("_ValidationScriptsPartial");
}
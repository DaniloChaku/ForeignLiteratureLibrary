@model AuthorDto

@{
    ViewBag.Title = "Додати автора";
}

<form asp-action="Add" method="post">
    <h2 class="text-center mb-3">Додати</h2>
    <div class="row mb-3">
        <div class="col-md-6">
            <label asp-for="FullName" class="form-label">ПІБ<span class="text-danger">*</span></label>
            <input asp-for="FullName" class="form-control" />
            <span class="text-danger" asp-validation-for="FullName"></span>
        </div>
        <div class="col-md-6">
            <label asp-for="CountryCode" class="form-label">Країна<span class="text-danger">*</span></label>
            <select asp-for="CountryCode" asp-items="ViewBag.Countries" class="form-select" data-val-length-max="100" data-val-length-min="1">
                <option value="">Select a country</option>
            </select>
            <span class="text-danger" asp-validation-for="CountryCode"></span>
        </div>
    </div>

    <div class="row">
        <div class="col-6 col-lg-2 col-md-3 offset-lg-4 offset-md-3">
            <button type="submit" class="btn btn-primary form-control">Додати</button>
        </div>
        <div class="col-6 col-lg-2 col-md-3">
            <a class="btn btn-secondary form-control" asp-action="Index">Повернутися</a>
        </div>
    </div>

    <ul>
        @if (ViewBag.Errors != null)
        {
            @foreach (var error in ViewBag.Errors)
            {
                <li>@error</li>
            }
        }
    </ul>
</form>

@section Scripts{
    @await Html.PartialAsync("_ValidationScriptsPartial");
}
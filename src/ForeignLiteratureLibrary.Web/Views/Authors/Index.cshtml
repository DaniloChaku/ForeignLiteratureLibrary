@model PaginatedResult<AuthorDto>

@{
    ViewBag.Title = "Автори";
}

<a class="btn btn-primary mt-2 mb-4" asp-action="Add">Додати</a>

<div class="d-flex flex-column align-content-center gap-3">
    <h2 class="text-center">Автори</h2>
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">ПІБ</th>
                <th scope="col">Країна</th>
                <th scope="col">Рік народження</th>
                <th scope="col">Рік смерті</th>
                <th scope="col">Дії</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var author in Model.Items)
            {
                <tr>
                    <td>@author.AuthorFullName</td>
                    <td>@author.Country?.Name</td>
                    <td>@author.BirthYear</td>
                    <td>@author.DeathYear</td>
                    <td>
                        <a asp-action="Delete" asp-route-id="@author.AuthorID">Видалити</a>
                        <a asp-action="Edit" asp-route-id="@author.AuthorID">Редагувати</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    @await Html.PartialAsync("_PaginationPartial", (Model.Page, Model.TotalPages))
</div>